<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/pager_main_ui_bg">

    <RelativeLayout
        app:layout_widthPercent="35%"
        android:id="@+id/layout_cell_navi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/pager2_btn_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:contentDescription="@null"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pager1_navi_img_style"/>
    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/layout_cell_navi"
        android:layout_toLeftOf="@+id/layout_cell_navi">
        <LinearLayout
            android:id="@+id/layout_line1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            app:layout_heightPercent="33%"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_fm"
                android:background="@drawable/pager1_fm_img_style"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_traffic"
                android:background="@drawable/pager2_traffic_img_style"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_file"
                android:background="@drawable/pager2_file_img_style"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_line2"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            app:layout_heightPercent="33%"
            android:layout_below="@+id/layout_line1"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_massage"
                android:background="@drawable/pager2_massage_img_style"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_photo"
                android:background="@drawable/pager2_photo_img_style"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_settings"
                android:background="@drawable/pager2_settings_img_style"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="33%"
            android:layout_below="@+id/layout_line2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pager2_btn_more"
                android:background="@drawable/pager2_more_img_style"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pager2_btn_net"
                android:background="@drawable/pager2_net_img_style"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageButton9"
                android:background="@drawable/pager_blank"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
